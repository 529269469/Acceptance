<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:textSize="@dimen/text_font_18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_16"
            android:gravity="center_horizontal"
            android:text="添加检查项"
            android:textColor="@color/color_5398F7" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_30"
            android:paddingTop="@dimen/padding_30">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_36"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="产品代号"
                        android:textColor="#999999" />

                    <EditText
                        android:id="@+id/tv_productCodeName"
                        android:layout_width="@dimen/padding_300"
                        android:layout_height="@dimen/padding_36"
                        android:layout_marginLeft="@dimen/padding_10"
                        android:background="@drawable/shape_edtext"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/padding_10"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/text_font_14" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_36"
                    android:layout_marginTop="@dimen/padding_10"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="产品名称"
                        android:textColor="#999999" />

                    <EditText
                        android:id="@+id/tv_productName"
                        android:layout_width="@dimen/padding_300"
                        android:layout_height="@dimen/padding_36"
                        android:layout_marginLeft="@dimen/padding_10"
                        android:background="@drawable/shape_edtext"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/padding_10"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/text_font_14" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_36"
                    android:layout_marginTop="@dimen/padding_10"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="产品编号"
                        android:textColor="#999999" />

                    <EditText
                        android:id="@+id/tv_productCode"
                        android:layout_width="@dimen/padding_300"
                        android:layout_height="@dimen/padding_36"
                        android:layout_marginLeft="@dimen/padding_10"
                        android:background="@drawable/shape_edtext"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/padding_10"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/text_font_14" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_36"
                    android:layout_marginTop="@dimen/padding_10"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="产品状态"
                        android:textColor="#999999" />

                    <EditText
                        android:id="@+id/tv_productStatus"
                        android:layout_width="@dimen/padding_300"
                        android:layout_height="@dimen/padding_36"
                        android:layout_marginLeft="@dimen/padding_10"
                        android:background="@drawable/shape_edtext"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/padding_10"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/text_font_14" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_36"
                    android:layout_marginTop="@dimen/padding_10"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="投产数量"
                        android:textColor="#999999" />

                    <EditText
                        android:id="@+id/tv_checkCount"
                        android:layout_width="@dimen/padding_60"
                        android:layout_height="@dimen/padding_36"
                        android:layout_marginLeft="@dimen/padding_10"
                        android:background="@drawable/shape_edtext"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/padding_10"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/text_font_14" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding_10"
                        android:text="已验收数量"
                        android:textColor="#999999" />

                    <EditText
                        android:id="@+id/tv_checkCount2"
                        android:layout_width="@dimen/padding_60"
                        android:layout_height="@dimen/padding_36"
                        android:background="@drawable/shape_edtext"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/padding_10"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/text_font_14" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding_10"
                        android:text="验收数量"
                        android:textColor="#999999" />

                    <EditText
                        android:id="@+id/tv_checkCount3"
                        android:layout_width="@dimen/padding_60"
                        android:layout_height="@dimen/padding_36"
                        android:layout_marginRight="@dimen/padding_16"
                        android:background="@drawable/shape_edtext"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/padding_10"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/text_font_14" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_36"
                    android:layout_marginTop="@dimen/padding_10"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="是否终检"
                        android:textColor="#999999" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding_16"
                        android:text="否"
                        android:textColor="@color/color_333333" />

                    <Switch
                        android:id="@+id/tv_isPureCheck"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding_10"
                        android:textSize="@dimen/text_font_14" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="是"
                        android:textColor="@color/color_333333" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_36"
                    android:layout_marginTop="@dimen/padding_10"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="是否军检"
                        android:textColor="#999999" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding_16"
                        android:text="否"
                        android:textColor="@color/color_333333" />

                    <Switch
                        android:id="@+id/tv_isArmyCheck"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding_10"
                        android:textSize="@dimen/text_font_14" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="是"
                        android:textColor="@color/color_333333" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_36"
                    android:layout_marginTop="@dimen/padding_10"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="筛选试验是否完成"
                        android:textColor="#999999" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding_16"
                        android:text="否"
                        android:textColor="@color/color_333333" />

                    <Switch
                        android:id="@+id/tv_isCompleteChoice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding_10"
                        android:textSize="@dimen/text_font_14" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="是"
                        android:textColor="@color/color_333333" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_36"
                    android:layout_marginTop="@dimen/padding_10"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="例行试验是否完成"
                        android:textColor="#999999" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding_16"
                        android:text="否"
                        android:textColor="@color/color_333333" />

                    <Switch
                        android:id="@+id/tv_isCompleteRoutine"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding_10"
                        android:textSize="@dimen/text_font_14" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="是"
                        android:textColor="@color/color_333333" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_36"
                    android:layout_marginTop="@dimen/padding_10"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="是否具备出厂交付条件"
                        android:textColor="#999999" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding_16"
                        android:text="否"
                        android:textColor="@color/color_333333" />

                    <Switch
                        android:id="@+id/tv_isSatisfyRequire"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding_10"
                        android:textSize="@dimen/text_font_14" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="是"
                        android:textColor="@color/color_333333" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_36"
                    android:layout_marginTop="@dimen/padding_10"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="       备 注"
                        android:textColor="#999999" />

                    <EditText
                        android:id="@+id/tv_description"
                        android:layout_width="@dimen/padding_300"
                        android:layout_height="@dimen/padding_36"
                        android:layout_marginLeft="@dimen/padding_10"
                        android:background="@drawable/shape_edtext"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/padding_10"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/text_font_14" />
                </LinearLayout>

            </LinearLayout>



        </LinearLayout>
        <RelativeLayout
            android:layout_marginTop="@dimen/padding_16"
            android:layout_marginBottom="@dimen/padding_30"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_popup_save"
                android:layout_alignParentRight="true"
                android:textColor="@color/color_FFFFFF"
                android:gravity="center"
                android:background="@drawable/shape_text2"
                android:layout_marginRight="@dimen/padding_24"
                android:text="保存"
                android:layout_width="@dimen/padding_60"
                android:layout_height="@dimen/padding_30"/>
        </RelativeLayout>

    </LinearLayout>
</ScrollView>