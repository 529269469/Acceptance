<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginTop="@dimen/padding_10"
            android:textColor="@color/color_000"
            android:text="查环例行试验报告——试验项目"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_marginTop="@dimen/padding_10"
            android:background="@drawable/shape_ed"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_30">

            <TextView
                android:text="项目"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="@dimen/padding_0"
                android:layout_height="match_parent"/>

            <View
                android:background="@color/color_D0D0D0"
                android:layout_width="@dimen/padding_1"
                android:layout_height="match_parent"/>
            <TextView
                android:text="技术条件规定值"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="@dimen/padding_0"
                android:layout_height="match_parent"/>

            <View
                android:background="@color/color_D0D0D0"
                android:layout_width="@dimen/padding_1"
                android:layout_height="match_parent"/>

            <TextView
                android:text="试验实践值"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="@dimen/padding_0"
                android:layout_height="match_parent"/>

            <View
                android:background="@color/color_D0D0D0"
                android:layout_width="@dimen/padding_1"
                android:layout_height="match_parent"/>

            <TextView
                android:text="试验结论"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="@dimen/padding_0"
                android:layout_height="match_parent"/>


        </LinearLayout>
        <ListView
            android:id="@+id/lv_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_marginBottom="@dimen/padding_100"
            android:layout_marginTop="@dimen/padding_20"
           android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:text="上一页"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:layout_marginLeft="@dimen/padding_16"
                android:text="下一页"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:layout_marginLeft="@dimen/padding_16"
                android:text="确定"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:layout_marginLeft="@dimen/padding_16"
                android:text="取消"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>


    </LinearLayout>

</ScrollView>