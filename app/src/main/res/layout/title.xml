    android:layout_height="@dimen/padding_40"
    android:background="@color/color_FFFFFF"
    android:orientation="horizontal">

    <TextView
        android:layout_marginRight="@dimen/padding_12"
        android:layout_marginLeft="@dimen/padding_12"
