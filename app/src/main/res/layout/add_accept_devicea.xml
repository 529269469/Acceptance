<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_24"
        android:orientation="vertical">


        <TextView
            android:textSize="@dimen/text_font_18"
            android:id="@+id/tv_add"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_30"
            android:gravity="center"
            android:text="添加专用仪表"
            android:textColor="@color/color_5398F7" />

        <RelativeLayout
            android:layout_marginTop="@dimen/padding_16"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_36">

            <TextView
                android:layout_marginLeft="@dimen/padding_10"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="名称"
                android:textColor="#999999" />

            <EditText
                android:id="@+id/tv_name"
                android:layout_width="@dimen/padding_300"
                android:layout_height="@dimen/padding_36"
                android:layout_marginLeft="@dimen/padding_100"
                android:background="@drawable/shape_edtext"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/padding_10"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_font_14" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="@dimen/padding_10"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_36">

            <TextView
                android:layout_marginLeft="@dimen/padding_10"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="型号规格"
                android:textColor="#999999" />

            <EditText
                android:id="@+id/tv_specification"
                android:layout_width="@dimen/padding_300"
                android:layout_height="@dimen/padding_36"
                android:layout_marginLeft="@dimen/padding_100"
                android:background="@drawable/shape_edtext"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/padding_10"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_font_14" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="@dimen/padding_10"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_36">

            <TextView
                android:layout_marginLeft="@dimen/padding_10"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="精度"
                android:textColor="#999999" />

            <EditText
                android:id="@+id/tv_accuracy"
                android:layout_width="@dimen/padding_300"
                android:layout_height="@dimen/padding_36"
                android:layout_marginLeft="@dimen/padding_100"
                android:background="@drawable/shape_edtext"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/padding_10"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_font_14" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="@dimen/padding_10"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_36">

            <TextView
                android:layout_marginLeft="@dimen/padding_10"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="合格证明\n和有效期"
                android:textColor="#999999" />

            <EditText
                android:id="@+id/tv_certificate"
                android:layout_width="@dimen/padding_300"
                android:layout_height="@dimen/padding_36"
                android:layout_marginLeft="@dimen/padding_100"
                android:background="@drawable/shape_edtext"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/padding_10"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_font_14" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_save"
            android:layout_gravity="right"
            android:gravity="center"
            android:text="保存"
            android:textColor="@color/color_5398F7"
            android:background="@drawable/shape_text"
            android:layout_marginTop="@dimen/padding_16"
            android:layout_width="@dimen/padding_60"
            android:layout_height="@dimen/padding_30"/>


    </LinearLayout>
</LinearLayout>