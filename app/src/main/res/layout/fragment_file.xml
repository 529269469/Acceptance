<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".fragment.setup.PacketFragment">

    <LinearLayout
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="@dimen/padding_0"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_marginRight="@dimen/padding_20"
                    android:layout_marginLeft="@dimen/padding_20"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/padding_50"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/padding_40">
                    <TextView
                        android:id="@+id/tv_type"
                        android:text="一级文件类型名称"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:id="@+id/et_type"
                        android:background="@drawable/shape_ed"
                        android:layout_marginLeft="@dimen/padding_16"
                        android:layout_width="@dimen/padding_150"
                        android:layout_height="@dimen/padding_30"/>
                    <TextView
                        android:id="@+id/tv_add"
                        android:textColor="@color/color_FFFFFF"
                        android:gravity="center"
                        android:background="@drawable/shape_lv"
                        android:layout_marginLeft="@dimen/padding_16"
                        android:text="添加"
                        android:layout_width="@dimen/padding_60"
                        android:layout_height="@dimen/padding_30"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="@dimen/padding_20"
                    android:orientation="vertical"
                    android:background="@drawable/shape_ed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/padding_40">
                        <TextView
                            android:gravity="center"
                            android:text="序号"
                            android:layout_weight="1"
                            android:layout_width="@dimen/padding_0"
                            android:layout_height="wrap_content"/>
                        <View
                            android:background="@color/color_D0D0D0"
                            android:layout_width="@dimen/padding_1"
                            android:layout_height="@dimen/padding_30"/>
                        <TextView
                            android:id="@+id/tv_type1"
                            android:gravity="center"
                            android:text="一级文件类型名称"
                            android:layout_weight="8"
                            android:layout_width="@dimen/padding_0"
                            android:layout_height="wrap_content"/>
                        <View
                            android:background="@color/color_D0D0D0"
                            android:layout_width="@dimen/padding_1"
                            android:layout_height="@dimen/padding_30"/>

                        <TextView
                            android:gravity="center"
                            android:text="操作"
                            android:layout_weight="1"
                            android:layout_width="@dimen/padding_0"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <View
                        android:background="@color/color_D0D0D0"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/padding_1"/>
                    <ListView
                        android:id="@+id/lv_packet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                
                <LinearLayout
                    android:layout_marginRight="@dimen/padding_20"
                    android:layout_marginLeft="@dimen/padding_20"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/padding_50"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/padding_40">
                    <TextView
                        android:id="@+id/tv_type2"
                        android:text="二级文件类型名称"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/et_type2"
                        android:background="@drawable/shape_ed"
                        android:layout_marginLeft="@dimen/padding_16"
                        android:layout_width="@dimen/padding_150"
                        android:layout_height="@dimen/padding_30"/>
                    <TextView
                        android:id="@+id/tv_add2"
                        android:textColor="@color/color_FFFFFF"
                        android:gravity="center"
                        android:background="@drawable/shape_lv"
                        android:layout_marginLeft="@dimen/padding_16"
                        android:text="添加"
                        android:layout_width="@dimen/padding_60"
                        android:layout_height="@dimen/padding_30"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="@dimen/padding_20"
                    android:orientation="vertical"
                    android:background="@drawable/shape_ed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/padding_40">
                        <TextView
                            android:gravity="center"
                            android:text="序号"
                            android:layout_weight="1"
                            android:layout_width="@dimen/padding_0"
                            android:layout_height="wrap_content"/>
                        <View
                            android:background="@color/color_D0D0D0"
                            android:layout_width="@dimen/padding_1"
                            android:layout_height="@dimen/padding_30"/>
                        <TextView
                            android:id="@+id/tv_type22"
                            android:gravity="center"
                            android:text="二级文件类型名称"
                            android:layout_weight="8"
                            android:layout_width="@dimen/padding_0"
                            android:layout_height="wrap_content"/>
                        <View
                            android:background="@color/color_D0D0D0"
                            android:layout_width="@dimen/padding_1"
                            android:layout_height="@dimen/padding_30"/>

                        <TextView
                            android:gravity="center"
                            android:text="操作"
                            android:layout_weight="1"
                            android:layout_width="@dimen/padding_0"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <View
                        android:background="@color/color_D0D0D0"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/padding_1"/>
                    <ListView
                        android:id="@+id/lv_packet2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>


        </ScrollView>



    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="@dimen/padding_0"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/lv_file"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

</LinearLayout>