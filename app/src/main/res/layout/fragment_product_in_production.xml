<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.main.course.ProductInProductionFragment">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/padding_30"
        android:orientation="vertical">

        <TextView
            android:paddingLeft="@dimen/padding_10"
            android:gravity="center_vertical"
            android:background="@color/color_6DC8FF"
            android:textColor="@color/color_000"
            android:text="电气产品（含电缆）过程检查记录"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_30"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/color_000"
                android:text="过程检查记录——产品生产过程"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:layout_marginLeft="@dimen/padding_20"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/padding_40"
                android:text="上传文件" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="@dimen/padding_40"
                android:layout_marginLeft="@dimen/padding_20"
                android:text="关联文件" />

        </LinearLayout>

        <com.example.acceptance.view.MyListView
            android:layout_marginTop="@dimen/padding_10"
            android:id="@+id/lv_standard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <LinearLayout
            android:layout_marginBottom="@dimen/padding_50"
            android:layout_marginTop="@dimen/padding_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/color_000"
                android:text="特殊情况记录及其它："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:gravity="top"
                android:background="@drawable/shape_ed"
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_100"/>


        </LinearLayout>


    </LinearLayout>

</ScrollView>