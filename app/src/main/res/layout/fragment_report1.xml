<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.main.technology.electric.report.Report1Fragment">

    <TextView
        android:layout_marginTop="@dimen/padding_10"
        android:textColor="@color/color_000"
        android:text="查环例行试验报告——基本信息"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/padding_40"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_40">
        <TextView
            android:textColor="@color/color_000"
            android:text="试验时间："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:background="@drawable/shape_ed"
            android:layout_width="@dimen/padding_100"
            android:layout_height="@dimen/padding_30"/>

        <TextView
            android:layout_marginLeft="@dimen/padding_30"
            android:textColor="@color/color_000"
            android:text="试验地点："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:background="@drawable/shape_ed"
            android:layout_width="@dimen/padding_100"
            android:layout_height="@dimen/padding_30"/>
    </LinearLayout>

    <ListView
        android:id="@+id/lv_list"
        android:layout_marginBottom="@dimen/padding_50"
        android:layout_marginTop="@dimen/padding_80"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:text="下一页"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_marginLeft="@dimen/padding_16"
            android:text="确定"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_marginLeft="@dimen/padding_16"
            android:text="取消"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</RelativeLayout>