<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="#121276">

            <ImageView
                android:id="@+id/iv_genduo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="8dp"
                android:src="@drawable/left" />

            <TextView
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv_genduo"
                android:textSize="@dimen/text_font_20"
                android:id="@+id/tv_tuichu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#fff"
                android:textStyle="bold" />

            <ImageView
                android:padding="@dimen/padding_10"
                android:id="@+id/iv_up"
                android:src="@drawable/up"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginRight="@dimen/padding_50"
                android:id="@+id/tv_operation"
                android:gravity="center"
                android:textColor="@color/color_FFFFFF"
                android:text="操作"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/iv_up"
                android:background="@drawable/shape_ed"
                android:layout_width="@dimen/padding_50"
                android:layout_height="@dimen/padding_30"/>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_title"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <GridView
                android:numColumns="9"
                android:id="@+id/gv_one"
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_30"/>
            <View
                android:background="@color/color_D0D0D0"
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_1"/>
            <GridView
                android:background="@color/color_FFFFFF"
                android:visibility="gone"
                android:id="@+id/gv_two"
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_30"/>
            <View
                android:background="@color/color_D0D0D0"
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_1"/>
            <GridView
                android:background="@color/color_FFFFFF"
                android:visibility="gone"
                android:id="@+id/gv_three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>


        <FrameLayout
            android:id="@+id/frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />



</LinearLayout>