<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.main.course.PreProductionFragment">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/padding_30"
        android:orientation="vertical">

        <TextView
            android:paddingLeft="@dimen/padding_10"
            android:gravity="center_vertical"
            android:background="@color/color_6DC8FF"
            android:textColor="@color/color_000"
            android:text="电气产品（含电缆）过程检查记录"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_30"/>

        <LinearLayout
            android:layout_marginTop="@dimen/padding_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/color_000"
                android:text="过程检查记录——检查结论"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>


        <LinearLayout
            android:layout_marginBottom="@dimen/padding_50"
            android:layout_marginTop="@dimen/padding_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/color_000"
                android:text="过程记录检查结论："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:gravity="top"
                android:background="@drawable/shape_ed"
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_100"/>


        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="@dimen/padding_50"
            android:layout_marginTop="@dimen/padding_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/color_000"
                android:text="检查人签名："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/iv_"
                android:gravity="top"
                android:background="@drawable/shape_ed"
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_100"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>