<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:textSize="@dimen/padding_18"
        android:gravity="center"
        android:textColor="@color/color_5398F7"
        android:text="导出数据包模板"
        android:layout_gravity="center_horizontal"
        android:layout_width="@dimen/padding_200"
        android:layout_height="@dimen/padding_40"/>

    <LinearLayout
        android:layout_marginTop="@dimen/padding_16"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:text="模板名称"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/edit_name"
            android:layout_marginLeft="@dimen/padding_16"
            android:background="@drawable/shape_edtext"
            android:text=""
            android:layout_width="@dimen/padding_300"
            android:layout_height="@dimen/padding_40"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/padding_16"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_no"
            android:textColor="@color/colorAccent"
            android:gravity="center"
            android:layout_marginLeft="@dimen/padding_16"
            android:background="@drawable/shape_text"
            android:text="取消"
            android:layout_width="@dimen/padding_60"
            android:layout_height="@dimen/padding_30"/>

        <TextView
            android:id="@+id/tv_yes"
            android:textColor="@color/color_5398F7"
            android:gravity="center"
            android:layout_marginLeft="@dimen/padding_60"
            android:background="@drawable/shape_text"
            android:text="保存"
            android:layout_width="@dimen/padding_60"
            android:layout_height="@dimen/padding_30"/>
    </LinearLayout>

</LinearLayout>