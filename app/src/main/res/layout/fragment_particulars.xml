<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_FFFFFF"
    tools:context=".fragment.main.ParticularsFragment">

    <LinearLayout
        android:paddingBottom="@dimen/padding_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_24"
        android:background="@drawable/shape_ed2">

        <LinearLayout
            android:layout_width="@dimen/padding_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="@dimen/padding_30"
            android:paddingTop="@dimen/padding_30">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_36"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="       编 号"
                        android:textColor="#999999" />

                    <EditText
                        android:textSize="@dimen/text_font_14"
                        android:id="@+id/tv_code"
                        android:layout_width="@dimen/padding_300"
                        android:layout_height="@dimen/padding_36"
                        android:layout_marginLeft="@dimen/padding_10"
                        android:background="@drawable/shape_edtext"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/padding_10"
                        android:textColor="@color/color_333333" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_36"
                    android:layout_marginTop="@dimen/padding_24"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="    创造者"
                        android:textColor="#999999" />

                    <EditText
                        android:textSize="@dimen/text_font_14"
                        android:id="@+id/tv_creator"
                        android:layout_width="@dimen/padding_300"
                        android:layout_height="@dimen/padding_36"
                        android:layout_marginLeft="@dimen/padding_10"
                        android:background="@drawable/shape_edtext"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/padding_10"
                        android:textColor="@color/color_333333" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_36"
                    android:layout_marginTop="@dimen/padding_24"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="责任单位"
                        android:textColor="#999999" />

                    <EditText
                        android:textSize="@dimen/text_font_14"
                        android:id="@+id/tv_responseUnit"
                        android:layout_width="@dimen/padding_300"
                        android:layout_height="@dimen/padding_36"
                        android:layout_marginLeft="@dimen/padding_10"
                        android:background="@drawable/shape_edtext"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/padding_10"
                        android:textColor="@color/color_333333" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_36"
                    android:layout_marginTop="@dimen/padding_24"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="产品类别"
                        android:textColor="#999999" />

                    <EditText
                        android:textSize="@dimen/text_font_14"
                        android:id="@+id/tv_productType"
                        android:layout_width="@dimen/padding_300"
                        android:layout_height="@dimen/padding_36"
                        android:layout_marginLeft="@dimen/padding_10"
                        android:background="@drawable/shape_edtext"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/padding_10"
                        android:textColor="@color/color_333333" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_36"
                    android:layout_marginTop="@dimen/padding_24"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="型号代号"
                        android:textColor="#999999" />

                    <EditText
                        android:textSize="@dimen/text_font_14"
                        android:id="@+id/tv_modalCode"
                        android:layout_width="@dimen/padding_300"
                        android:layout_height="@dimen/padding_36"
                        android:layout_marginLeft="@dimen/padding_10"
                        android:background="@drawable/shape_edtext"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/padding_10"
                        android:textColor="@color/color_333333" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_36"
                    android:layout_marginTop="@dimen/padding_24"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="       批 次"
                        android:textColor="#999999" />

                    <EditText
                        android:textSize="@dimen/text_font_14"
                        android:id="@+id/tv_batch"
                        android:layout_width="@dimen/padding_300"
                        android:layout_height="@dimen/padding_36"
                        android:layout_marginLeft="@dimen/padding_10"
                        android:background="@drawable/shape_edtext"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/padding_10"
                        android:textColor="@color/color_333333" />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/padding_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="@dimen/padding_30"
            android:paddingTop="@dimen/padding_30">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_36"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="       名 称"
                        android:textColor="#999999" />

                    <EditText
                        android:textSize="@dimen/text_font_14"
                        android:id="@+id/tv_name_part"
                        android:layout_width="@dimen/padding_300"
                        android:layout_height="@dimen/padding_36"
                        android:layout_marginLeft="@dimen/padding_10"
                        android:background="@drawable/shape_edtext"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/padding_10"
                        android:textColor="@color/color_333333" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_36"
                    android:layout_marginTop="@dimen/padding_24"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="创造时间"
                        android:textColor="#999999" />

                    <EditText
                        android:textSize="@dimen/text_font_14"
                        android:id="@+id/tv_createTime"
                        android:layout_width="@dimen/padding_300"
                        android:layout_height="@dimen/padding_36"
                        android:layout_marginLeft="@dimen/padding_10"
                        android:background="@drawable/shape_edtext"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/padding_10"
                        android:textColor="@color/color_333333" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_36"
                    android:layout_marginTop="@dimen/padding_24"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="       类 型"
                        android:textColor="#999999" />

                    <EditText
                        android:textSize="@dimen/text_font_14"
                        android:id="@+id/tv_type_part"
                        android:layout_width="@dimen/padding_300"
                        android:layout_height="@dimen/padding_36"
                        android:layout_marginLeft="@dimen/padding_10"
                        android:background="@drawable/shape_edtext"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/padding_10"
                        android:textColor="@color/color_333333" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_36"
                    android:layout_marginTop="@dimen/padding_24"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="产品名称"
                        android:textColor="#999999" />

                    <EditText
                        android:textSize="@dimen/text_font_14"
                        android:id="@+id/tv_productName"
                        android:layout_width="@dimen/padding_300"
                        android:layout_height="@dimen/padding_36"
                        android:layout_marginLeft="@dimen/padding_10"
                        android:background="@drawable/shape_edtext"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/padding_10"
                        android:textColor="@color/color_333333" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_36"
                    android:layout_marginTop="@dimen/padding_24"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="产品编号"
                        android:textColor="#999999" />

                    <EditText
                        android:textSize="@dimen/text_font_14"
                        android:id="@+id/tv_productCode"
                        android:layout_width="@dimen/padding_300"
                        android:layout_height="@dimen/padding_36"
                        android:layout_marginLeft="@dimen/padding_10"
                        android:background="@drawable/shape_edtext"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/padding_10"
                        android:textColor="@color/color_333333" />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:visibility="gone"
        android:layout_marginTop="@dimen/padding_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_save"
            android:layout_alignParentRight="true"
            android:textColor="@color/color_FFFFFF"
            android:gravity="center"
            android:background="@drawable/shape_text2"
            android:layout_marginRight="@dimen/padding_24"
            android:text="保存"
            android:layout_width="@dimen/padding_60"
            android:layout_height="@dimen/padding_30"/>
    </RelativeLayout>

</LinearLayout>