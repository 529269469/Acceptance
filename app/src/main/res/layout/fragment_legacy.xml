<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.main.LegacyFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/padding_24">

        <LinearLayout
            android:visibility="gone"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            android:background="@drawable/shape_ed2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_42">

            <TextView
                android:id="@+id/tv_code"
                android:layout_marginLeft="@dimen/padding_27"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="编号：C021-01"
                android:textColor="@color/color_333333" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_77"
                android:text="名称：分系统验收申请"
                android:textColor="@color/color_333333" />

        </LinearLayout>
        <TextView
            android:layout_marginTop="@dimen/padding_20"
            android:textColor="@color/color_000"
            android:text="产品验收遗留问题："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:background="#EDF4FF"
            android:layout_marginTop="@dimen/padding_5"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_40">

            <TextView
                android:gravity="center"
                android:textColor="#999999"
                android:text="序号"
                android:layout_weight="1"
                android:layout_width="@dimen/padding_0"
                android:layout_height="match_parent"/>

            <TextView
                android:gravity="center"
                android:textColor="#999999"
                android:text="产品编号"
                android:layout_weight="2"
                android:layout_width="@dimen/padding_0"
                android:layout_height="match_parent"/>

            <TextView
                android:gravity="center"
                android:textColor="#999999"
                android:text="遗留问题"
                android:layout_weight="5"
                android:layout_width="@dimen/padding_0"
                android:layout_height="match_parent"/>

            <TextView
                android:gravity="center"
                android:textColor="#999999"
                android:text="遗留问题落实\n确认人"
                android:layout_weight="2"
                android:layout_width="@dimen/padding_0"
                android:layout_height="match_parent"/>

            <TextView
                android:gravity="center"
                android:textColor="#999999"
                android:text="遗留问题\n落实时间"
                android:layout_weight="2"
                android:layout_width="@dimen/padding_0"
                android:layout_height="match_parent"/>

            <TextView
                android:gravity="center"
                android:textColor="#999999"
                android:text="遗留问题落实情况\n说明文件"
                android:layout_weight="3"
                android:layout_width="@dimen/padding_0"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <com.example.acceptance.view.MyListView
            android:id="@+id/lv_list"
            android:background="@drawable/shape_ed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:visibility="gone"
            android:layout_marginTop="@dimen/padding_16"
            android:gravity="center_horizontal"
            android:layout_marginBottom="@dimen/padding_100"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/color_5398F7"
                android:gravity="center"
                android:background="@drawable/shape_text"
                android:text="取消"
                android:layout_width="@dimen/padding_60"
                android:layout_height="@dimen/padding_30"/>
            <Button
                android:textColor="@color/color_FFFFFF"
                android:gravity="center"
                android:background="@drawable/shape_text2"
                android:layout_marginLeft="@dimen/padding_24"
                android:text="确定"
                android:layout_width="@dimen/padding_60"
                android:layout_height="@dimen/padding_30"/>
        </LinearLayout>

    </LinearLayout>


</ScrollView>