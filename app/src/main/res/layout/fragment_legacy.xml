<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.main.LegacyFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/padding_30">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="编号："
                android:textColor="@color/color_000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C021-01"
                android:textColor="@color/color_000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_20"
                android:text="名称："
                android:textColor="@color/color_000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分系统验收申请"
                android:textColor="@color/color_000" />

        </LinearLayout>

        <TextView
            android:layout_marginTop="@dimen/padding_20"
            android:textColor="@color/color_000"
            android:text="产品验收遗留问题："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:background="@drawable/shape_ed"
            android:layout_marginTop="@dimen/padding_5"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_40">

            <TextView
                android:gravity="center"
                android:textColor="@color/color_000"
                android:text="序号"
                android:layout_weight="1"
                android:layout_width="@dimen/padding_0"
                android:layout_height="match_parent"/>

            <View
                android:background="@color/color_D0D0D0"
                android:layout_width="@dimen/padding_1"
                android:layout_height="match_parent"/>
            <TextView
                android:gravity="center"
                android:textColor="@color/color_000"
                android:text="产品编号"
                android:layout_weight="2"
                android:layout_width="@dimen/padding_0"
                android:layout_height="match_parent"/>

            <View
                android:background="@color/color_D0D0D0"
                android:layout_width="@dimen/padding_1"
                android:layout_height="match_parent"/>
            <TextView
                android:gravity="center"
                android:textColor="@color/color_000"
                android:text="遗留问题"
                android:layout_weight="5"
                android:layout_width="@dimen/padding_0"
                android:layout_height="match_parent"/>

            <View
                android:background="@color/color_D0D0D0"
                android:layout_width="@dimen/padding_1"
                android:layout_height="match_parent"/>

            <TextView
                android:gravity="center"
                android:textColor="@color/color_000"
                android:text="遗留问题落实\n确认人"
                android:layout_weight="2"
                android:layout_width="@dimen/padding_0"
                android:layout_height="match_parent"/>

            <View
                android:background="@color/color_D0D0D0"
                android:layout_width="@dimen/padding_1"
                android:layout_height="match_parent"/>

            <TextView
                android:gravity="center"
                android:textColor="@color/color_000"
                android:text="遗留问题\n落实时间"
                android:layout_weight="2"
                android:layout_width="@dimen/padding_0"
                android:layout_height="match_parent"/>

            <View
                android:background="@color/color_D0D0D0"
                android:layout_width="@dimen/padding_1"
                android:layout_height="match_parent"/>

            <TextView
                android:gravity="center"
                android:textColor="@color/color_000"
                android:text="遗留问题落实情况\n说明文件"
                android:layout_weight="3"
                android:layout_width="@dimen/padding_0"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <com.example.acceptance.view.MyListView
            android:id="@+id/lv_list2"
            android:background="@drawable/shape_ed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:layout_marginBottom="@dimen/padding_100"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:text="取消"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:layout_marginRight="@dimen/padding_100"
                android:text="确定"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

    </LinearLayout>


</LinearLayout>