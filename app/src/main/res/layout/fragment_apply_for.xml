<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.main.ApplyForFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_30"
            android:paddingTop="@dimen/padding_30">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="编号："
                android:textColor="@color/color_000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C021-01"
                android:textColor="@color/color_000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_20"
                android:text="名称："
                android:textColor="@color/color_000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分系统验收申请"
                android:textColor="@color/color_000" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="@dimen/padding_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="@dimen/padding_30"
                android:paddingTop="@dimen/padding_30">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/padding_0"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="合同编号："
                        android:textColor="@color/color_000" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/padding_0"
                        android:layout_marginTop="@dimen/padding_10"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="合同名称："
                        android:textColor="@color/color_000" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/padding_0"
                        android:layout_marginTop="@dimen/padding_10"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="产品代号："
                        android:textColor="@color/color_000" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/padding_0"
                        android:layout_marginTop="@dimen/padding_10"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="产品名称："
                        android:textColor="@color/color_000" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/padding_0"
                        android:layout_marginTop="@dimen/padding_10"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="产品编号："
                        android:textColor="@color/color_000" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/padding_0"
                        android:layout_marginTop="@dimen/padding_10"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="产品状态："
                        android:textColor="@color/color_000" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/padding_10"
                    android:orientation="vertical">

                    <EditText
                        android:layout_width="@dimen/padding_300"
                        android:layout_height="@dimen/padding_30"
                        android:layout_weight="1"
                        android:background="@drawable/shape_ed"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/padding_10"
                        android:text="HT-10"
                        android:textColor="@color/color_A4A4A4"
                        android:textSize="@dimen/text_font_12" />

                    <EditText
                        android:layout_width="@dimen/padding_300"
                        android:layout_height="@dimen/padding_30"
                        android:layout_marginTop="@dimen/padding_10"
                        android:layout_weight="1"
                        android:background="@drawable/shape_ed"
                        android:paddingLeft="@dimen/padding_10"
                        android:text="遥安分系统生产"
                        android:textColor="@color/color_A4A4A4"
                        android:textSize="@dimen/text_font_12" />

                    <EditText
                        android:layout_width="@dimen/padding_300"
                        android:layout_height="@dimen/padding_30"
                        android:layout_marginTop="@dimen/padding_10"
                        android:layout_weight="1"
                        android:background="@drawable/shape_ed"
                        android:paddingLeft="@dimen/padding_10"
                        android:text="xxx1-10"
                        android:textColor="@color/color_A4A4A4"
                        android:textSize="@dimen/text_font_12" />

                    <EditText
                        android:layout_width="@dimen/padding_300"
                        android:layout_height="@dimen/padding_30"
                        android:layout_marginTop="@dimen/padding_10"
                        android:layout_weight="1"
                        android:background="@drawable/shape_ed"
                        android:paddingLeft="@dimen/padding_10"
                        android:text="遥安分系统"
                        android:textColor="@color/color_A4A4A4"
                        android:textSize="@dimen/text_font_12" />

                    <EditText
                        android:layout_width="@dimen/padding_300"
                        android:layout_height="@dimen/padding_30"
                        android:layout_marginTop="@dimen/padding_10"
                        android:layout_weight="1"
                        android:background="@drawable/shape_ed"
                        android:text="xxx1-10"
                        android:textColor="@color/color_A4A4A4"
                        android:textSize="@dimen/text_font_12" />

                    <EditText
                        android:layout_width="@dimen/padding_300"
                        android:layout_height="@dimen/padding_30"
                        android:layout_marginTop="@dimen/padding_10"
                        android:layout_weight="1"
                        android:background="@drawable/shape_ed"
                        android:paddingLeft="@dimen/padding_10"
                        android:text="c"
                        android:textColor="@color/color_A4A4A4"
                        android:textSize="@dimen/text_font_12" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/padding_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="@dimen/padding_30"
                android:paddingTop="@dimen/padding_30">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/padding_0"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="投产数量/已验收数量/验收数量："
                        android:textColor="@color/color_000" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/padding_0"
                        android:layout_marginTop="@dimen/padding_10"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="是否终检："
                        android:textColor="@color/color_000" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/padding_0"
                        android:layout_marginTop="@dimen/padding_10"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="是否军检："
                        android:textColor="@color/color_000" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/padding_0"
                        android:layout_marginTop="@dimen/padding_10"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="刷选试验是否完成："
                        android:textColor="@color/color_000" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/padding_0"
                        android:layout_marginTop="@dimen/padding_10"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="例行试验是否完成："
                        android:textColor="@color/color_000" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/padding_0"
                        android:layout_marginTop="@dimen/padding_10"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="是否具备出产验收条件："
                        android:textColor="@color/color_000" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/padding_10"
                    android:orientation="vertical">

                    <EditText
                        android:layout_width="@dimen/padding_100"
                        android:layout_height="@dimen/padding_30"
                        android:layout_weight="1"
                        android:background="@drawable/shape_ed"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/padding_10"
                        android:text="HT-10"
                        android:textColor="@color/color_A4A4A4"
                        android:textSize="@dimen/text_font_12" />

                    <LinearLayout
                        android:layout_marginTop="@dimen/padding_10"
                        android:gravity="center_vertical"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/padding_30">
                        <TextView
                            android:text="是"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                       <Switch
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"/>
                        <TextView
                            android:text="否"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>



                    <LinearLayout
                        android:layout_marginTop="@dimen/padding_10"
                        android:gravity="center_vertical"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/padding_30">
                        <TextView
                            android:text="是"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <Switch
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:text="否"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="@dimen/padding_10"
                        android:gravity="center_vertical"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/padding_30">
                        <TextView
                            android:text="是"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <Switch
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:text="否"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="@dimen/padding_10"
                        android:gravity="center_vertical"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/padding_30">
                        <TextView
                            android:text="是"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <Switch
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:text="否"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="@dimen/padding_10"
                        android:gravity="center_vertical"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/padding_30">
                        <TextView
                            android:text="是"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <Switch
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:text="否"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/padding_30"
            android:layout_marginTop="@dimen/padding_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/color_000"
                android:text="申请单位："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:layout_marginLeft="@dimen/padding_10"
                android:layout_width="@dimen/padding_300"
                android:layout_height="@dimen/padding_30"
                android:background="@drawable/shape_ed"
                android:paddingLeft="@dimen/padding_10"
                android:text="XX单位"
                android:textColor="@color/color_A4A4A4"
                android:textSize="@dimen/text_font_12" />

            <TextView
                android:layout_marginLeft="@dimen/padding_40"
                android:textColor="@color/color_000"
                android:text="申请人："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:layout_width="@dimen/padding_100"
                android:layout_height="@dimen/padding_30"
                android:background="@drawable/shape_ed"
                android:paddingLeft="@dimen/padding_10"
                android:text="XX单位"
                android:textColor="@color/color_A4A4A4"
                android:textSize="@dimen/text_font_12" />

            <TextView
                android:layout_marginLeft="@dimen/padding_40"
                android:textColor="@color/color_000"
                android:text="联系电话："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:layout_width="@dimen/padding_150"
                android:layout_height="@dimen/padding_30"
                android:background="@drawable/shape_ed"
                android:paddingLeft="@dimen/padding_10"
                android:text="XX单位"
                android:textColor="@color/color_A4A4A4"
                android:textSize="@dimen/text_font_12" />

        </LinearLayout>

        <RelativeLayout
            android:layout_marginLeft="@dimen/padding_30"
            android:layout_marginTop="@dimen/padding_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_conclusion"
                android:textColor="@color/color_000"
                android:text="验收内部审查结论："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:gravity="top"
                android:padding="@dimen/padding_5"
                android:background="@drawable/shape_ed"
                android:layout_marginRight="@dimen/padding_150"
                android:layout_toRightOf="@id/tv_conclusion"
                android:layout_marginLeft="@dimen/padding_10"
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_100"/>

            <Button
                android:id="@+id/bt_up"
                android:layout_marginRight="@dimen/padding_30"
                android:layout_alignParentRight="true"
                android:text="上传文件"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/padding_40"/>



        </RelativeLayout>

        <RelativeLayout
            android:layout_marginBottom="@dimen/padding_40"
            android:layout_marginLeft="@dimen/padding_115"
            android:layout_marginTop="@dimen/padding_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_other"
                android:textColor="@color/color_000"
                android:text="备注："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:gravity="top"
                android:padding="@dimen/padding_5"
                android:background="@drawable/shape_ed"
                android:layout_marginRight="@dimen/padding_150"
                android:layout_toRightOf="@id/tv_other"
                android:layout_marginLeft="@dimen/padding_10"
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_70"/>

        </RelativeLayout>

    </LinearLayout>
</ScrollView>