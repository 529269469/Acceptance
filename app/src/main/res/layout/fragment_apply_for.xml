<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_FFFFFF"
    tools:context=".fragment.main.ApplyForFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:visibility="gone"
            android:paddingLeft="@dimen/padding_10"
            android:background="@drawable/shape_ed2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_42"
            android:layout_marginLeft="@dimen/padding_24"
            android:layout_marginRight="@dimen/padding_24"
            android:layout_marginTop="@dimen/padding_18">

                <TextView
                    android:id="@+id/tv_code"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/color_333333" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_marginLeft="@dimen/padding_70"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/color_333333" />
            <TextView
                android:id="@+id/tv_contractCode"
                android:layout_marginLeft="@dimen/padding_70"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/color_333333" />
            <TextView
                android:id="@+id/tv_contractName"
                android:layout_marginLeft="@dimen/padding_70"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/color_333333" />


        </LinearLayout>

        <LinearLayout
            android:focusable="true"
            android:layout_marginTop="@dimen/padding_24"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_30">

            <TextView
                android:layout_marginLeft="@dimen/padding_30"
                android:id="@+id/tv_add"
                android:textColor="@color/color_5398F7"
                android:gravity="center"
                android:background="@drawable/shape_text"
                android:layout_marginRight="@dimen/padding_24"
                android:text="添加验收项"
                android:layout_width="@dimen/padding_100"
                android:layout_height="@dimen/padding_30"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginRight="@dimen/padding_30"
            android:layout_marginLeft="@dimen/padding_30"
            android:background="#EDF4FF"
            android:layout_marginTop="@dimen/padding_10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_40">

            <TextView
                android:textSize="@dimen/text_font_12"
                android:textColor="#999999"
                android:text="序号"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="@dimen/padding_0"
                android:layout_height="match_parent"/>

            <TextView
                android:textSize="@dimen/text_font_12"
                android:textColor="#999999"
                android:text="产品代号"
                android:gravity="center"
                android:layout_weight="2"
                android:layout_width="@dimen/padding_0"
                android:layout_height="match_parent"/>



            <TextView
                android:textSize="@dimen/text_font_12"
                android:textColor="#999999"
                android:text="产品名称"
                android:gravity="center"
                android:layout_weight="2"
                android:layout_width="@dimen/padding_0"
                android:layout_height="match_parent"/>


            <TextView
                android:textSize="@dimen/text_font_12"
                android:textColor="#999999"
                android:text="产品编号"
                android:gravity="center"
                android:layout_weight="2"
                android:layout_width="@dimen/padding_0"
                android:layout_height="match_parent"/>


            <TextView
                android:textSize="@dimen/text_font_12"
                android:textColor="#999999"
                android:text="产品状态"
                android:gravity="center"
                android:layout_weight="2"
                android:layout_width="@dimen/padding_0"
                android:layout_height="match_parent"/>



            <TextView
                android:textSize="@dimen/text_font_12"
                android:textColor="#999999"
                android:text="投产数量/已验收数量/验收数量"
                android:gravity="center"
                android:layout_weight="2"
                android:layout_width="@dimen/padding_0"
                android:layout_height="match_parent"/>


            <TextView
                android:textSize="@dimen/text_font_12"
                android:textColor="#999999"
                android:text="是否\n终检"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="@dimen/padding_0"
                android:layout_height="match_parent"/>



            <TextView
                android:textSize="@dimen/text_font_12"
                android:textColor="#999999"
                android:text="是否\n军检"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="@dimen/padding_0"
                android:layout_height="match_parent"/>



            <TextView
                android:textSize="@dimen/text_font_12"
                android:textColor="#999999"
                android:text="筛选试验\n是否完成"
                android:gravity="center"
                android:layout_weight="2"
                android:layout_width="@dimen/padding_0"
                android:layout_height="match_parent"/>

            <TextView
                android:textSize="@dimen/text_font_12"
                android:textColor="#999999"
                android:text="例行试验\n是否完成"
                android:gravity="center"
                android:layout_weight="2"
                android:layout_width="@dimen/padding_0"
                android:layout_height="match_parent"/>

            <TextView
                android:textSize="@dimen/text_font_12"
                android:textColor="#999999"
                android:text="是否具备\n出厂交付条件"
                android:gravity="center"
                android:layout_weight="2"
                android:layout_width="@dimen/padding_0"
                android:layout_height="match_parent"/>

            <TextView
                android:textSize="@dimen/text_font_12"
                android:textColor="#999999"
                android:text="备注"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="@dimen/padding_0"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <com.example.acceptance.view.MyListView
            android:id="@+id/lv_list"
            android:background="@drawable/shape_ed"
            android:layout_marginRight="@dimen/padding_30"
            android:layout_marginLeft="@dimen/padding_30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_margin="@dimen/padding_24"
            android:background="@drawable/shape_ed2"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <LinearLayout
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/padding_90"
            android:layout_marginTop="@dimen/padding_16"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_36">

            <TextView
                android:textSize="@dimen/text_font_15"
                android:textColor="@color/color_333333"
                android:text="申请单位"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/et_applyCompany"
                android:layout_marginLeft="@dimen/padding_10"
                android:layout_width="700dp"
                android:layout_height="match_parent"
                android:background="@drawable/shape_ed"
                android:paddingLeft="@dimen/padding_10"
                android:textColor="@color/color_A4A4A4"
                android:textSize="@dimen/text_font_14" />

        </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="@dimen/padding_105"
                android:layout_marginTop="@dimen/padding_18"
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_36">
                <TextView
                    android:textSize="@dimen/text_font_15"
                    android:textColor="@color/color_333333"
                    android:text="申请人"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/et_applicant"
                    android:layout_marginLeft="@dimen/padding_10"
                    android:layout_width="@dimen/padding_300"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape_ed"
                    android:paddingLeft="@dimen/padding_10"
                    android:textColor="@color/color_A4A4A4"
                    android:textSize="@dimen/text_font_14" />

                <TextView
                    android:layout_marginLeft="@dimen/padding_50"
                    android:textColor="@color/color_333333"
                    android:text="联系电话："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:layout_width="@dimen/padding_280"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape_ed"
                    android:paddingLeft="@dimen/padding_10"
                    android:id="@+id/et_phone"
                    android:textColor="@color/color_A4A4A4"
                    android:textSize="@dimen/text_font_14"/>

            </LinearLayout>

        <RelativeLayout
            android:layout_marginLeft="@dimen/padding_30"
            android:layout_marginTop="@dimen/padding_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/text_font_15"
                android:id="@+id/tv_conclusion"
                android:textColor="@color/color_333333"
                android:text="验收内部审查结论"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_paizhao"
                android:textColor="@color/color_5398F7"
                android:background="@drawable/shape_text"
                android:gravity="center"
                android:text="拍照"
                android:layout_marginLeft="@dimen/padding_60"
                android:layout_marginTop="@dimen/padding_10"
                android:layout_below="@id/tv_conclusion"
                android:layout_width="@dimen/padding_60"
                android:layout_height="@dimen/padding_30"/>
            <LinearLayout
                android:layout_toRightOf="@id/tv_conclusion"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/padding_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:textSize="@dimen/text_font_14"
                    android:id="@+id/et_conclusion"
                    android:gravity="top"
                    android:padding="@dimen/padding_5"
                    android:background="@drawable/shape_ed"
                    android:layout_width="700dp"
                    android:layout_height="@dimen/padding_90"/>
                <com.example.acceptance.view.MyGridView
                    android:numColumns="5"
                    android:id="@+id/gv_conclusion"
                    android:horizontalSpacing="@dimen/padding_8"
                    android:layout_width="700dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>



        </RelativeLayout>

        <LinearLayout
            android:layout_marginBottom="@dimen/padding_40"
            android:layout_marginLeft="@dimen/padding_120"
            android:layout_marginTop="@dimen/padding_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/text_font_15"
                android:id="@+id/tv_other"
                android:textColor="@color/color_333333"
                android:text="备注"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:textSize="@dimen/text_font_14"
                android:id="@+id/et_description"
                android:gravity="top"
                android:padding="@dimen/padding_5"
                android:background="@drawable/shape_ed"
                android:layout_marginRight="@dimen/padding_150"
                android:layout_marginLeft="@dimen/padding_10"
                android:layout_width="700dp"
                android:layout_height="@dimen/padding_90"/>

        </LinearLayout>
            <RelativeLayout
                android:layout_marginBottom="@dimen/padding_16"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_save"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/color_FFFFFF"
                    android:gravity="center"
                    android:background="@drawable/shape_text2"
                    android:layout_marginRight="@dimen/padding_24"
                    android:text="保存"
                    android:layout_width="@dimen/padding_60"
                    android:layout_height="@dimen/padding_30"/>
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>