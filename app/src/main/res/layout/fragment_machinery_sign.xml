<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/padding_30"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_30"
            android:background="@color/color_6DC8FF"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/padding_10"
            android:text="机械产品外观，性能，试验检查" />


        <TextView
            android:layout_marginTop="@dimen/padding_10"
            android:textColor="@color/color_000"
            android:text="质量证明文件签署"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.example.acceptance.view.MyListView
            android:id="@+id/lv_list"
            android:layout_marginTop="@dimen/padding_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_marginTop="@dimen/padding_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="检查人签字:"
                android:textColor="@color/color_000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:background="@drawable/shape_ed"
                android:layout_width="@dimen/padding_200"
                android:layout_height="@dimen/padding_100"/>

            <TextView
                android:layout_marginLeft="@dimen/padding_50"
                android:text="日期:"
                android:textColor="@color/color_000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:background="@drawable/shape_ed"
                android:layout_width="@dimen/padding_100"
                android:layout_height="@dimen/padding_40"/>


        </LinearLayout>

    </LinearLayout>
</LinearLayout>