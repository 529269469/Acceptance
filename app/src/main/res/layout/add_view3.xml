<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_FFFFFF"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_24"
        android:orientation="vertical">


        <TextView

            android:id="@+id/tv_add"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_30"
            android:gravity="center"
            android:text="添加检查项"
            android:textColor="@color/color_5398F7" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_36"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="检查项名称"
                android:textColor="#999999" />

            <EditText
                android:id="@+id/tv_name"
                android:layout_width="@dimen/padding_300"
                android:layout_height="@dimen/padding_36"
                android:layout_marginLeft="@dimen/padding_10"
                android:background="@drawable/shape_edtext"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/padding_10"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_font_14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginTop="@dimen/padding_16"
                android:id="@+id/tv_options"
                android:layout_width="@dimen/padding_100"
                android:layout_height="@dimen/padding_30"
                android:background="@drawable/shape_text"
                android:gravity="center"
                android:text="添加单选项"
                android:textColor="@color/color_5398F7" />

            <com.example.acceptance.view.MyListView
                android:divider="#00000000"
                android:id="@+id/lv_options"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_10"/>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginTop="@dimen/padding_16"
                android:id="@+id/tv_Property"
                android:layout_width="@dimen/padding_100"
                android:layout_height="@dimen/padding_30"
                android:background="@drawable/shape_text"
                android:gravity="center"
                android:text="添加扩展属性"
                android:textColor="@color/color_5398F7" />

            <com.example.acceptance.view.MyListView
                android:divider="#00000000"
                android:id="@+id/lv_Property"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_10"/>

        </LinearLayout>


        <TextView
            android:id="@+id/tv_save"
            android:layout_width="@dimen/padding_60"
            android:layout_height="@dimen/padding_30"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/padding_10"
            android:layout_marginRight="@dimen/padding_16"
            android:background="@drawable/shape_text"
            android:gravity="center"
            android:text="保存"
            android:textColor="@color/color_5398F7" />


    </LinearLayout>
</LinearLayout>