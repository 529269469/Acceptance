<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".fragment.main.AcceptanceConclusionFragment">

    <LinearLayout
        android:background="@color/color_FFFFFF"
        android:layout_margin="@dimen/padding_24"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            android:background="@drawable/shape_ed2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_42">

            <TextView
                android:id="@+id/tv_code"
                android:layout_marginLeft="@dimen/padding_27"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="编号："
                android:textColor="@color/color_333333" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_77"
                android:text="名称："
                android:textColor="@color/color_333333" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/padding_16"
            android:background="@drawable/shape_ed2"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <LinearLayout
            android:layout_marginRight="@dimen/padding_16"
            android:layout_marginLeft="@dimen/padding_16"
            android:layout_marginTop="@dimen/padding_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginLeft="@dimen/padding_13"
                android:textColor="@color/color_000"
                android:text="齐套性检查结论"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:paddingLeft="@dimen/padding_10"
                android:textSize="@dimen/text_font_14"
                android:id="@+id/et_qConclusion"
                android:layout_marginLeft="@dimen/padding_10"
                android:gravity="top"
                android:background="@drawable/shape_edtext"
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_90"/>

        </LinearLayout>
        <LinearLayout
            android:layout_marginRight="@dimen/padding_16"
            android:layout_marginLeft="@dimen/padding_16"
            android:layout_marginTop="@dimen/padding_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginLeft="@dimen/padding_27"
                android:textColor="@color/color_000"
                android:text="过程检查结论"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:paddingLeft="@dimen/padding_10"
                android:id="@+id/et_gConclusion"
                android:textSize="@dimen/text_font_14"
                android:layout_marginLeft="@dimen/padding_10"
                android:gravity="top"
                android:background="@drawable/shape_edtext"
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_90"/>

        </LinearLayout>
        <LinearLayout
            android:layout_margin="@dimen/padding_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/color_000"
                android:text="外观性能检查结论"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:paddingLeft="@dimen/padding_10"
                android:id="@+id/et_jConclusion"
                android:textSize="@dimen/text_font_14"
                android:layout_marginLeft="@dimen/padding_10"
                android:gravity="top"
                android:background="@drawable/shape_edtext"
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_90"/>

        </LinearLayout>

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_40">
            <TextView
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/padding_10"
                android:textColor="@color/color_000"
                android:text="产品验收情况："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/color_5398F7"
                android:background="@drawable/shape_text"
                android:gravity="center"
                android:layout_marginRight="@dimen/padding_100"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/padding_10"
                android:text="添加"
                android:layout_width="@dimen/padding_60"
                android:layout_height="@dimen/padding_30"/>
            <TextView
                android:textColor="@color/color_5398F7"
                android:background="@drawable/shape_text"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/padding_10"
                android:text="移除"
                android:layout_width="@dimen/padding_60"
                android:layout_height="@dimen/padding_30"/>
        </RelativeLayout>


        <LinearLayout
            android:background="#EDF4FF"
            android:layout_marginTop="@dimen/padding_5"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_40">

            <TextView
                android:gravity="center"
                android:textColor="#999999"
                android:text="序号"
                android:layout_weight="1"
                android:layout_width="@dimen/padding_0"
                android:layout_height="match_parent"/>

            <TextView
                android:gravity="center"
                android:textColor="#999999"
                android:text="产品编号"
                android:layout_weight="3"
                android:layout_width="@dimen/padding_0"
                android:layout_height="match_parent"/>

            <TextView
                android:gravity="center"
                android:textColor="#999999"
                android:text="产品名称"
                android:layout_weight="5"
                android:layout_width="@dimen/padding_0"
                android:layout_height="match_parent"/>

            <TextView
                android:gravity="center"
                android:textColor="#999999"
                android:text="是否通过验收"
                android:layout_weight="2"
                android:layout_width="@dimen/padding_0"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <com.example.acceptance.view.MyListView
            android:id="@+id/lv_list1"
            android:background="@drawable/shape_ed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:layout_marginTop="@dimen/padding_20"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_40">

            <TextView
                android:layout_centerVertical="true"
                android:textColor="@color/color_000"
                android:text="产品验收遗留问题："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="@color/color_5398F7"
                android:background="@drawable/shape_text"
                android:gravity="center"
                android:layout_marginRight="@dimen/padding_100"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/padding_10"
                android:text="添加"
                android:layout_width="@dimen/padding_60"
                android:layout_height="@dimen/padding_30"/>
            <TextView
                android:textColor="@color/color_5398F7"
                android:background="@drawable/shape_text"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/padding_10"
                android:text="移除"
                android:layout_width="@dimen/padding_60"
                android:layout_height="@dimen/padding_30"/>
        </RelativeLayout>



        <LinearLayout
            android:background="#EDF4FF"
            android:layout_marginTop="@dimen/padding_5"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_40">

            <TextView
                android:gravity="center"
                android:textColor="#999999"
                android:text="序号"
                android:layout_weight="1"
                android:layout_width="@dimen/padding_0"
                android:layout_height="match_parent"/>

            <TextView
                android:gravity="center"
                android:textColor="#999999"
                android:text="产品编号"
                android:layout_weight="3"
                android:layout_width="@dimen/padding_0"
                android:layout_height="match_parent"/>

            <TextView
                android:gravity="center"
                android:textColor="#999999"
                android:text="遗留问题"
                android:layout_weight="5"
                android:layout_width="@dimen/padding_0"
                android:layout_height="match_parent"/>

            <TextView
                android:gravity="center"
                android:textColor="#999999"
                android:text="遗留问题落实确认人"
                android:layout_weight="2"
                android:layout_width="@dimen/padding_0"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <com.example.acceptance.view.MyListView
            android:id="@+id/lv_list2"
            android:background="@drawable/shape_ed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <LinearLayout
            android:layout_marginTop="@dimen/padding_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/color_000"
                android:text="验收人签字"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_marginLeft="@dimen/padding_10"
                android:scaleType="fitXY"
                android:id="@+id/iv_signature"
                android:background="@drawable/shape_edtext"
                android:layout_width="@dimen/padding_300"
                android:layout_height="@dimen/padding_90"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/padding_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/color_000"
                android:text="    签字时间"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_time"
                android:layout_marginLeft="@dimen/padding_10"
                android:background="@drawable/shape_edtext"
                android:layout_width="@dimen/padding_300"
                android:layout_height="@dimen/padding_30"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/padding_16"
            android:gravity="center_horizontal"
            android:layout_marginBottom="@dimen/padding_100"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/color_5398F7"
                android:gravity="center"
                android:background="@drawable/shape_text"
                android:text="取消"
                android:layout_width="@dimen/padding_60"
                android:layout_height="@dimen/padding_30"/>
            <Button
                android:textColor="@color/color_FFFFFF"
                android:gravity="center"
                android:background="@drawable/shape_text2"
                android:layout_marginLeft="@dimen/padding_24"
                android:text="确定"
                android:layout_width="@dimen/padding_60"
                android:layout_height="@dimen/padding_30"/>
        </LinearLayout>
    </LinearLayout>

</ScrollView>