<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.main.AcceptanceConclusionFragment">

    <LinearLayout
        android:layout_margin="@dimen/padding_30"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="编号："
                android:textColor="@color/color_000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C021-01"
                android:textColor="@color/color_000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_20"
                android:text="名称："
                android:textColor="@color/color_000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分系统验收申请"
                android:textColor="@color/color_000" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/padding_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/color_000"
                android:text="齐套性检查结论："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:layout_marginLeft="@dimen/padding_13"
                android:gravity="top"
                android:background="@drawable/shape_ed"
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_50"/>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/padding_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/color_000"
                android:text="过程检查结论："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:layout_marginLeft="@dimen/padding_27"
                android:gravity="top"
                android:background="@drawable/shape_ed"
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_50"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/padding_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/color_000"
                android:text="外观性能检查结论："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:gravity="top"
                android:background="@drawable/shape_ed"
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_50"/>

        </LinearLayout>


        <TextView
            android:layout_marginTop="@dimen/padding_10"
            android:textColor="@color/color_000"
            android:text="产品验收情况："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:background="@drawable/shape_ed"
            android:layout_marginTop="@dimen/padding_5"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_40">

            <TextView
                android:gravity="center"
                android:textColor="@color/color_000"
                android:text="序号"
                android:layout_weight="1"
                android:layout_width="@dimen/padding_0"
                android:layout_height="match_parent"/>

            <View
                android:background="@color/color_D0D0D0"
                android:layout_width="@dimen/padding_1"
                android:layout_height="match_parent"/>
            <TextView
                android:gravity="center"
                android:textColor="@color/color_000"
                android:text="产品编号"
                android:layout_weight="3"
                android:layout_width="@dimen/padding_0"
                android:layout_height="match_parent"/>

            <View
                android:background="@color/color_D0D0D0"
                android:layout_width="@dimen/padding_1"
                android:layout_height="match_parent"/>
            <TextView
                android:gravity="center"
                android:textColor="@color/color_000"
                android:text="产品名称"
                android:layout_weight="5"
                android:layout_width="@dimen/padding_0"
                android:layout_height="match_parent"/>

            <View
                android:background="@color/color_D0D0D0"
                android:layout_width="@dimen/padding_1"
                android:layout_height="match_parent"/>

            <TextView
                android:gravity="center"
                android:textColor="@color/color_000"
                android:text="是否通过验收"
                android:layout_weight="2"
                android:layout_width="@dimen/padding_0"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <com.example.acceptance.view.MyListView
            android:id="@+id/lv_list1"
            android:background="@drawable/shape_ed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/padding_20"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_40">

            <TextView
                android:textColor="@color/color_000"
                android:text="产品验收遗留问题："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:layout_marginLeft="@dimen/padding_10"
                android:text="添加"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:layout_marginLeft="@dimen/padding_10"
                android:text="移除"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>



        <LinearLayout
            android:background="@drawable/shape_ed"
            android:layout_marginTop="@dimen/padding_5"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_40">

            <TextView
                android:gravity="center"
                android:textColor="@color/color_000"
                android:text="序号"
                android:layout_weight="1"
                android:layout_width="@dimen/padding_0"
                android:layout_height="match_parent"/>

            <View
                android:background="@color/color_D0D0D0"
                android:layout_width="@dimen/padding_1"
                android:layout_height="match_parent"/>
            <TextView
                android:gravity="center"
                android:textColor="@color/color_000"
                android:text="产品编号"
                android:layout_weight="3"
                android:layout_width="@dimen/padding_0"
                android:layout_height="match_parent"/>

            <View
                android:background="@color/color_D0D0D0"
                android:layout_width="@dimen/padding_1"
                android:layout_height="match_parent"/>
            <TextView
                android:gravity="center"
                android:textColor="@color/color_000"
                android:text="遗留问题"
                android:layout_weight="5"
                android:layout_width="@dimen/padding_0"
                android:layout_height="match_parent"/>

            <View
                android:background="@color/color_D0D0D0"
                android:layout_width="@dimen/padding_1"
                android:layout_height="match_parent"/>

            <TextView
                android:gravity="center"
                android:textColor="@color/color_000"
                android:text="遗留问题落实确认人"
                android:layout_weight="2"
                android:layout_width="@dimen/padding_0"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <com.example.acceptance.view.MyListView
            android:id="@+id/lv_list2"
            android:background="@drawable/shape_ed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <LinearLayout
            android:layout_marginTop="@dimen/padding_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/color_000"
                android:text="验收人签字："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/iv_signature"
                android:background="@drawable/shape_ed"
                android:layout_width="@dimen/padding_200"
                android:layout_height="@dimen/padding_100"/>

            <TextView
                android:layout_marginLeft="@dimen/padding_50"
                android:textColor="@color/color_000"
                android:text="签字时间："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:background="@drawable/shape_ed"
                android:layout_width="@dimen/padding_100"
                android:layout_height="@dimen/padding_30"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_marginBottom="@dimen/padding_100"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:text="取消"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:layout_marginRight="@dimen/padding_100"
                android:text="确定"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>

</ScrollView>