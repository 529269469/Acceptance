<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.main.kitting.KittingFileFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:background="@drawable/shape_ed2"
            android:layout_margin="@dimen/padding_24"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_40">

            <TextView
                android:layout_marginLeft="@dimen/padding_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="编号：C021-01"
                android:textColor="@color/color_333333" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_70"
                android:text="名称：分系统验收申请"
                android:textColor="@color/color_333333" />


        </LinearLayout>
        <TextView
            android:layout_marginLeft="@dimen/padding_30"
            android:textColor="@color/color_000"
            android:text="管理文件齐套性"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:background="#EDF4FF"
            android:layout_marginRight="@dimen/padding_30"
            android:layout_marginLeft="@dimen/padding_30"
            android:layout_marginTop="@dimen/padding_10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_30">

            <TextView
                android:textColor="#999999"
                android:layout_weight="1"
                android:text="序号"
                android:gravity="center"
                android:layout_width="@dimen/padding_0"
                android:layout_height="match_parent"/>


            <TextView
                android:textColor="#999999"
                android:layout_weight="2"
                android:text="文件类型"
                android:gravity="center"
                android:layout_width="@dimen/padding_0"
                android:layout_height="match_parent"/>

            <TextView
                android:textColor="#999999"
                android:layout_weight="2"
                android:text="文件代号"
                android:gravity="center"
                android:layout_width="@dimen/padding_0"
                android:layout_height="match_parent"/>

            <TextView
                android:textColor="#999999"
                android:layout_weight="2"
                android:text="文件名称"
                android:gravity="center"
                android:layout_width="@dimen/padding_0"
                android:layout_height="match_parent"/>


            <TextView
                android:textColor="#999999"
                android:layout_weight="2"
                android:text="技术状态"
                android:gravity="center"
                android:layout_width="@dimen/padding_0"
                android:layout_height="match_parent"/>


            <TextView
                android:textColor="#999999"
                android:layout_weight="2"
                android:text="批准人"
                android:gravity="center"
                android:layout_width="@dimen/padding_0"
                android:layout_height="match_parent"/>


            <TextView
                android:textColor="#999999"
                android:layout_weight="2"
                android:text="批准日期"
                android:gravity="center"
                android:layout_width="@dimen/padding_0"
                android:layout_height="match_parent"/>

            <TextView
                android:textColor="#999999"
                android:layout_weight="2"
                android:text="是否晒蓝"
                android:gravity="center"
                android:layout_width="@dimen/padding_0"
                android:layout_height="match_parent"/>


            <TextView
                android:textColor="#999999"
                android:layout_weight="3"
                android:text="验收结论"
                android:gravity="center"
                android:layout_width="@dimen/padding_0"
                android:layout_height="match_parent"/>


            <TextView
                android:textColor="#999999"
                android:layout_weight="2"
                android:text="备注"
                android:gravity="center"
                android:layout_width="@dimen/padding_0"
                android:layout_height="match_parent"/>


            <TextView
                android:textColor="#999999"
                android:layout_weight="2"
                android:text="操作"
                android:gravity="center"
                android:layout_width="@dimen/padding_0"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <com.example.acceptance.view.MyListView
            android:background="@drawable/shape_ed"
            android:id="@+id/lv_file_kitting"
            android:layout_marginRight="@dimen/padding_30"
            android:layout_marginLeft="@dimen/padding_30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="@dimen/padding_30"
            android:layout_marginLeft="@dimen/padding_30"
            android:textColor="@color/color_000"
            android:text="技术文件齐套性"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:background="#EDF4FF"
            android:layout_marginRight="@dimen/padding_30"
            android:layout_marginLeft="@dimen/padding_30"
            android:layout_marginTop="@dimen/padding_10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_30">

            <TextView
                android:textColor="#999999"
                android:layout_weight="1"
                android:text="序号"
                android:gravity="center"
                android:layout_width="@dimen/padding_0"
                android:layout_height="match_parent"/>

            <TextView
                android:textColor="#999999"
                android:layout_weight="2"
                android:text="文件类型"
                android:gravity="center"
                android:layout_width="@dimen/padding_0"
                android:layout_height="match_parent"/>


            <TextView
                android:textColor="#999999"
                android:layout_weight="2"
                android:text="文件代号"
                android:gravity="center"
                android:layout_width="@dimen/padding_0"
                android:layout_height="match_parent"/>

            <TextView
                android:textColor="#999999"
                android:layout_weight="2"
                android:text="文件名称"
                android:gravity="center"
                android:layout_width="@dimen/padding_0"
                android:layout_height="match_parent"/>


            <TextView
                android:textColor="#999999"
                android:layout_weight="2"
                android:text="技术状态"
                android:gravity="center"
                android:layout_width="@dimen/padding_0"
                android:layout_height="match_parent"/>

            <TextView
                android:textColor="#999999"
                android:layout_weight="2"
                android:text="批准人"
                android:gravity="center"
                android:layout_width="@dimen/padding_0"
                android:layout_height="match_parent"/>

            <TextView
                android:textColor="#999999"
                android:layout_weight="2"
                android:text="批准日期"
                android:gravity="center"
                android:layout_width="@dimen/padding_0"
                android:layout_height="match_parent"/>

            <TextView
                android:textColor="#999999"
                android:layout_weight="2"
                android:text="是否晒蓝"
                android:gravity="center"
                android:layout_width="@dimen/padding_0"
                android:layout_height="match_parent"/>

            <TextView
                android:textColor="#999999"
                android:layout_weight="3"
                android:text="验收结论"
                android:gravity="center"
                android:layout_width="@dimen/padding_0"
                android:layout_height="match_parent"/>


            <TextView
                android:textColor="#999999"
                android:layout_weight="2"
                android:text="备注"
                android:gravity="center"
                android:layout_width="@dimen/padding_0"
                android:layout_height="match_parent"/>


            <TextView
                android:textColor="#999999"
                android:layout_weight="2"
                android:text="操作"
                android:gravity="center"
                android:layout_width="@dimen/padding_0"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <com.example.acceptance.view.MyListView
            android:layout_marginBottom="@dimen/padding_50"
            android:background="@drawable/shape_ed"
            android:id="@+id/lv_file_kitting2"
            android:layout_marginRight="@dimen/padding_30"
            android:layout_marginLeft="@dimen/padding_30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</ScrollView>