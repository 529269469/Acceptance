<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.main.DeliveryFragment">

    <LinearLayout
        android:layout_margin="@dimen/padding_30"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_40">

            <Button
                android:text="上传文件"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:layout_marginLeft="@dimen/padding_16"
                android:text="移除文件"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:layout_marginLeft="@dimen/padding_16"
                android:text="查找"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:layout_marginLeft="@dimen/padding_16"
                android:text="下载"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:layout_marginLeft="@dimen/padding_16"
                android:text="增加项目分类"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:layout_marginLeft="@dimen/padding_16"
                android:text="删除项目分类"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:layout_marginLeft="@dimen/padding_16"
                android:text="增加项目"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:layout_marginLeft="@dimen/padding_16"
                android:text="移除项目"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:background="@drawable/shape_ed"
            android:layout_marginTop="@dimen/padding_10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_30">

            <TextView
                android:gravity="center"
                android:text="口"
                android:layout_weight="1"
                android:layout_width="@dimen/padding_0"
                android:layout_height="match_parent"/>

            <View
                android:background="@color/color_D0D0D0"
                android:layout_width="@dimen/padding_1"
                android:layout_height="match_parent"/>

            <TextView
                android:textColor="@color/color_000"
                android:gravity="center"
                android:text="项目分类"
                android:layout_weight="3"
                android:layout_width="@dimen/padding_0"
                android:layout_height="match_parent"/>
            <View
                android:background="@color/color_D0D0D0"
                android:layout_width="@dimen/padding_1"
                android:layout_height="match_parent"/>
            <TextView
                android:textColor="@color/color_000"
                android:gravity="center"
                android:text="项目"
                android:layout_weight="5"
                android:layout_width="@dimen/padding_0"
                android:layout_height="match_parent"/>
            <View
                android:background="@color/color_D0D0D0"
                android:layout_width="@dimen/padding_1"
                android:layout_height="match_parent"/>
            <TextView
                android:textColor="@color/color_000"
                android:gravity="center"
                android:text="文件编号"
                android:layout_weight="3"
                android:layout_width="@dimen/padding_0"
                android:layout_height="match_parent"/>
            <View
                android:background="@color/color_D0D0D0"
                android:layout_width="@dimen/padding_1"
                android:layout_height="match_parent"/>
            <TextView
                android:textColor="@color/color_000"
                android:gravity="center"
                android:text="文件名称"
                android:layout_weight="9"
                android:layout_width="@dimen/padding_0"
                android:layout_height="match_parent"/>
            <View
                android:background="@color/color_D0D0D0"
                android:layout_width="@dimen/padding_1"
                android:layout_height="match_parent"/>
            <TextView
                android:textColor="@color/color_000"
                android:gravity="center"
                android:text="操作"
                android:layout_weight="2"
                android:layout_width="@dimen/padding_0"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <com.example.acceptance.view.MyListView
            android:id="@+id/lv_list"
            android:layout_marginBottom="@dimen/padding_100"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

</ScrollView>