<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.main.DeliveryFragment">

    <LinearLayout
        android:layout_margin="@dimen/padding_30"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:visibility="visible"
            android:layout_gravity="right"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/padding_40">

            <TextView
                android:id="@+id/tv_add_project"
                android:gravity="center"
                android:textColor="@color/color_5398F7"
                android:background="@drawable/shape_text"
                android:layout_marginLeft="@dimen/padding_16"
                android:text="增加项目分类"
                android:layout_width="@dimen/padding_100"
                android:layout_height="36dp"/>

        </LinearLayout>

        <LinearLayout
            android:background="#EDF4FF"
            android:layout_marginTop="@dimen/padding_10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_40">

            <TextView
                android:textColor="@color/color_000"
                android:gravity="center"
                android:text="项目分类"
                android:layout_weight="3"
                android:layout_width="@dimen/padding_0"
                android:layout_height="match_parent"/>

            <TextView
                android:textColor="@color/color_000"
                android:gravity="center"
                android:text="项目"
                android:layout_weight="5"
                android:layout_width="@dimen/padding_0"
                android:layout_height="match_parent"/>

            <TextView
                android:textColor="@color/color_000"
                android:gravity="center"
                android:text="文件编号"
                android:layout_weight="3"
                android:layout_width="@dimen/padding_0"
                android:layout_height="match_parent"/>

            <TextView
                android:textColor="@color/color_000"
                android:gravity="center"
                android:text="文件名称"
                android:layout_weight="9"
                android:layout_width="@dimen/padding_0"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <ListView
            android:divider="#00000000"
            android:id="@+id/lv_list"
            android:layout_marginBottom="@dimen/padding_40"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

</LinearLayout>