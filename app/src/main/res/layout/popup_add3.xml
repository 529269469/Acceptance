<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="450dp"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_16"
            android:gravity="center_horizontal"
            android:text="添加文件"
            android:textColor="@color/color_5398F7"
            android:textSize="@dimen/text_font_18" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_30"
            android:paddingTop="@dimen/padding_30">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_36"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="文件编号"
                        android:textColor="#999999" />

                    <EditText
                        android:id="@+id/tv_code"
                        android:layout_width="@dimen/padding_300"
                        android:layout_height="@dimen/padding_36"
                        android:layout_marginLeft="@dimen/padding_10"
                        android:background="@drawable/shape_edtext"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/padding_10"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/text_font_14" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_36"
                    android:layout_marginTop="@dimen/padding_10"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="文件名称"
                        android:textColor="#999999" />

                    <EditText
                        android:id="@+id/tv_name"
                        android:layout_width="@dimen/padding_300"
                        android:layout_height="@dimen/padding_36"
                        android:layout_marginLeft="@dimen/padding_10"
                        android:background="@drawable/shape_edtext"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/padding_10"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/text_font_14" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_36"
                    android:layout_marginTop="@dimen/padding_10"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="文件类型"
                        android:textColor="#999999" />

                    <EditText
                        android:id="@+id/tv_payClassify"
                        android:layout_width="@dimen/padding_300"
                        android:layout_height="@dimen/padding_36"
                        android:layout_marginLeft="@dimen/padding_10"
                        android:background="@drawable/shape_edtext"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/padding_10"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/text_font_14" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_36"
                    android:layout_marginTop="@dimen/padding_10"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="       密 级"
                        android:textColor="#999999" />

                    <EditText
                        android:id="@+id/tv_secret"
                        android:layout_width="@dimen/padding_300"
                        android:layout_height="@dimen/padding_36"
                        android:layout_marginLeft="@dimen/padding_10"
                        android:background="@drawable/shape_edtext"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/padding_10"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/text_font_14" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_36"
                    android:layout_marginTop="@dimen/padding_10"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="技术状态"
                        android:textColor="#999999" />

                    <EditText
                        android:id="@+id/tv_techStatus"
                        android:layout_width="@dimen/padding_300"
                        android:layout_height="@dimen/padding_36"
                        android:layout_marginLeft="@dimen/padding_10"
                        android:background="@drawable/shape_edtext"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/padding_10"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/text_font_14" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_36"
                    android:layout_marginTop="@dimen/padding_10"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="    批准人"
                        android:textColor="#999999" />

                    <EditText
                        android:id="@+id/tv_approver"
                        android:layout_width="@dimen/padding_300"
                        android:layout_height="@dimen/padding_36"
                        android:layout_marginLeft="@dimen/padding_10"
                        android:background="@drawable/shape_edtext"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/padding_10"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/text_font_14" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_36"
                    android:layout_marginTop="@dimen/padding_10"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="批准日期"
                        android:textColor="#999999" />

                    <EditText
                        android:id="@+id/tv_approvalDate"
                        android:layout_width="@dimen/padding_300"
                        android:layout_height="@dimen/padding_36"
                        android:layout_marginLeft="@dimen/padding_10"
                        android:background="@drawable/shape_edtext"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/padding_10"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/text_font_14" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_36"
                    android:layout_marginTop="@dimen/padding_10"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="是否晒蓝"
                        android:textColor="#999999" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding_16"
                        android:text="否"
                        android:textColor="@color/color_333333" />

                    <Switch
                        android:id="@+id/tv_issl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding_10"
                        android:textSize="@dimen/text_font_14" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="是"
                        android:textColor="@color/color_333333" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_36"
                    android:layout_marginTop="@dimen/padding_10"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="验收结论"
                        android:textColor="#999999" />

                    <EditText
                        android:id="@+id/tv_conclusion"
                        android:layout_width="@dimen/padding_300"
                        android:layout_height="@dimen/padding_36"
                        android:layout_marginLeft="@dimen/padding_10"
                        android:background="@drawable/shape_edtext"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/padding_10"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/text_font_14" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_36"
                    android:layout_marginTop="@dimen/padding_10"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="      备  注"
                        android:textColor="#999999" />

                    <EditText
                        android:id="@+id/tv_description"
                        android:layout_width="@dimen/padding_300"
                        android:layout_height="@dimen/padding_36"
                        android:layout_marginLeft="@dimen/padding_10"
                        android:background="@drawable/shape_edtext"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/padding_10"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/text_font_14" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_36"
                    android:layout_marginTop="@dimen/padding_10"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="添加文件"
                        android:textColor="#999999" />

                    <TextView
                        android:text="浏览"
                        android:id="@+id/tv_file"
                        android:layout_width="@dimen/padding_300"
                        android:layout_height="@dimen/padding_36"
                        android:layout_marginLeft="@dimen/padding_10"
                        android:background="@drawable/shape_edtext"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/padding_10"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/text_font_14" />
                </LinearLayout>

                <com.example.acceptance.view.MyListView
                    android:layout_marginTop="@dimen/padding_10"
                    android:layout_marginLeft="@dimen/padding_70"
                    android:id="@+id/lv_file"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>
        <RelativeLayout
            android:layout_marginTop="@dimen/padding_16"
            android:layout_marginBottom="@dimen/padding_30"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_popup_save"
                android:layout_alignParentRight="true"
                android:textColor="@color/color_FFFFFF"
                android:gravity="center"
                android:background="@drawable/shape_text2"
                android:layout_marginRight="@dimen/padding_24"
                android:text="保存"
                android:layout_width="@dimen/padding_60"
                android:layout_height="@dimen/padding_30"/>
        </RelativeLayout>

    </LinearLayout>
</ScrollView>