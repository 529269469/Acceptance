<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.main.technology.electric.performance.Performance1Fragment">

    <TextView
        android:layout_marginTop="@dimen/padding_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="产品性能测试验收情况（常温）"
        android:textColor="@color/color_000" />

    <View
        android:layout_marginTop="@dimen/padding_35"
        android:background="@color/color_D0D0D0"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_40"
        android:layout_marginTop="@dimen/padding_40">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="增加" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="移除" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_30"
        android:layout_marginTop="@dimen/padding_80"
        android:background="@drawable/shape_ed"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/padding_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="序号"
            android:textColor="@color/color_000" />

        <View
            android:layout_width="@dimen/padding_1"
            android:layout_height="match_parent"
            android:background="@color/color_D0D0D0" />

        <TextView
            android:layout_width="@dimen/padding_0"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:gravity="center"
            android:text="检查项目"
            android:textColor="@color/color_000" />

        <View
            android:layout_width="@dimen/padding_1"
            android:layout_height="match_parent"
            android:background="@color/color_D0D0D0" />

        <TextView
            android:layout_width="@dimen/padding_0"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:text="技术条件规定"
            android:textColor="@color/color_000" />

        <View
            android:layout_width="@dimen/padding_1"
            android:layout_height="match_parent"
            android:background="@color/color_D0D0D0" />

        <TextView
            android:layout_width="@dimen/padding_0"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:text="验收时实际值"
            android:textColor="@color/color_000" />

        <View
            android:layout_width="@dimen/padding_1"
            android:layout_height="match_parent"
            android:background="@color/color_D0D0D0" />

        <TextView
            android:layout_width="@dimen/padding_0"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:text="验收结果"
            android:textColor="@color/color_000" />




    </LinearLayout>





    <ListView
        android:layout_below="@id/ll_top"
        android:layout_marginBottom="@dimen/padding_50"
        android:id="@+id/lv_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下一页" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_16"
            android:text="确定" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_16"
            android:text="取消" />

    </LinearLayout>
</RelativeLayout>