<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:layout_marginTop="@dimen/padding_10"
            android:textColor="@color/color_000"
            android:text="包装检查"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_marginTop="@dimen/padding_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/color_000"
                android:text="特殊记载及其它："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:background="@drawable/shape_ed"
                android:gravity="top"
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_100"/>

        </LinearLayout>



        <LinearLayout
            android:layout_marginTop="@dimen/padding_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="检查人签字:"
                android:textColor="@color/color_000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:background="@drawable/shape_ed"
                android:layout_width="@dimen/padding_200"
                android:layout_height="@dimen/padding_100"/>

            <TextView
                android:layout_marginLeft="@dimen/padding_50"
                android:text="日期:"
                android:textColor="@color/color_000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:background="@drawable/shape_ed"
                android:layout_width="@dimen/padding_100"
                android:layout_height="@dimen/padding_40"/>


        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="@dimen/padding_100"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:text="上一页"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:layout_marginLeft="@dimen/padding_16"
                android:text="确定"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:layout_marginLeft="@dimen/padding_16"
                android:text="取消"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>